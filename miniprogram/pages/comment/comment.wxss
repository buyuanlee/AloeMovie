/* miniprogram/pages/comment/comment.wxss */

.movie-bg {
  height: 100vh;
  filter: blur(30rpx);
  opacity: 0.4;
}

.mask {
  position: absolute;
  width: 100vh;
  height: 100vh;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.movie-infor-wrapper {
  display: flex;
  width: 750rpx;
  padding: 24rpx 12rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.movie-poster {
  width: 240rpx;
  height: 360rpx;
}
.poster{
  max-width: 100%;
  max-height: 100%;
}
.movie-infor {
  flex-grow: 1;
  text-align: left;
  padding: 12rpx;
  font-size: 32rpx;
  margin: 0 24rpx;
  color: white;
  background: rgba(255, 255, 255, .1);
  box-shadow: 3rpx 3rpx 2rpx -2rpx rgba(255, 255, 255, 0.3);
}

.movie-title {
  color: #faaf00;
  font-size: 40rpx;
  font-weight: bolder;
}
