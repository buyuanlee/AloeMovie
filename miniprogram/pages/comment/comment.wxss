/* miniprogram/pages/comment/comment.wxss */

.movie-bg {
  height: 400rpx;
  filter: blur(30rpx);
  opacity: 0.4;
}

.mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.movie-info {
  display: flex;
  width: 750rpx;
  position: absolute;
  left: 0;
  top: 0;
  padding: 20rpx;
}

.movie-poster {
  width: 240rpx;
  height: 360rpx;
}

.movie-summary {
  flex-grow: 1;
  text-align: center;
  font-size: 32rpx;
  color: white;
}

.movie-title {
  color: #faaf00;
  font-size: 40rpx;
  font-weight: bolder;
}
