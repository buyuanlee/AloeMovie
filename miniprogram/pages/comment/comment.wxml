<view>
  <view class="movie-bg" style='background: url({{details.images.large}}) no-repeat center/cover'></view>
  <view class="mask"></view>
  <view class="movie-infor-wrapper">
  <view  class="movie-poster">
    <image src='{{details.images.small}}' class="poster"></image>
  </view>
    <view class="movie-infor">
      <view class="movie-title">{{details.title}}</view>
      <view>{{details.original_title}}({{details.year}})</view>
      <view class='details.sc'>{{details.rating.average}}分</view>
      <view>{{details.countries[0]}}</view>
      <view>导演：{{details.directors[0].name}}</view>
    </view>
  </view>
</view>